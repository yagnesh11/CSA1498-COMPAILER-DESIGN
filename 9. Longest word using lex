%{
	#include <string.h>
	int len1=0,len2=0;
	char word[10];
%}
%%
[^(" "|"\n")]+ { len2=strlen(yytext); if(len2>len1) {len1=len2; strcpy(word,yytext);}}
%%
int yywrap(void)
{}
int main()
{
	printf("Enter the String:");
	yylex();
	printf("The Longest Word Length:%d\nLongest Word: %s",len1,word);
	return 0;
}
